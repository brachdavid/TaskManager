@page "/confirm-delete/{entity}/{id:int}"
@attribute [Authorize(Roles = "Admin")]

@inject NavigationManager Navigation

<PageTitle>@Title</PageTitle>
<SectionContent SectionName="page-title">@Title</SectionContent>

<p>Are you sure you want to delete this @entity?</p>

<div class="d-flex">
    <a href="/edit-@entity/@id" class="btn btn-secondary me-2">Cancel</a>
    <a href="/delete/@entity/@id" class="btn btn-danger">Confirm</a>
</div>

@code {
    [Parameter] public string? entity { get; set; }
    [Parameter] public int id { get; set; }
    public string Title { get; private set; } = "Confirm deletion";
}